
public class SelectionSort {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] arr = {7,4,10,8,3};
		
		for(int i=0;i<arr.length-1;i++)
		{
			int min=i;
			for(int j=i+1;j<arr.length;j++)
			{
				if(arr[j]<arr[min])
				{
					min=j;
				}
			}
			if(min!=i)
			{
				swap(arr[i],arr[min]);
			}
		}
	}

	private static void swap(int i, int min) {
		
		int temp =0;
		temp=i;
		i=min;
		min=temp;
		
	}

}
